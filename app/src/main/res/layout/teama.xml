<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BannerA"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blaze"
        android:id="@+id/relativec">

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnertv"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:spinnerMode="dropdown" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitch"
            android:id="@+id/TwitchA"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/spinnertv"
            android:layout_marginLeft="27dp"
            android:layout_alignParentEnd="true"
            android:onClick="onButtonPress" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/teamacalender"
        android:background="@drawable/blaze">

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/calendarView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>